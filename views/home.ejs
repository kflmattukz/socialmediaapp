<%- include('template/head.ejs') %>
        <!-- LOGIN FLASH MESSAGE -->
        <% errors.forEach(msg => { %>
            <div class="absolute top-20 tracking-wide font-light left-1/3 text-center py-2 w-1/3 rounded mx-auto border border-red-600 border-opacity-80 bg-red-400 text-red-800 text-base" id="flash"><%= msg %></div>
        <% }) %>


        <div class="w-5/6 h-full flex mt-10 mx-auto mb-auto items-center">
            <div class="flex gap-4">
                <!-- INFO -->
                <div class="text-gray-700 p-10 w-5/6">
                    <h2 class="text-4xl font-light tracking-wider uppercase mb-5">Welcome to <br><span class="font-semibold">Social App</span></h2>
                    <div class="text-sm font-regular tracking-wide text-gray-600">
                        <p>Social Media is a virtual platform of connectivity. It includes all social websites and applications that are available for the general public</p>
                        <br>
                        <p>They connect us from people across the world. We can contact anybody through Social Media platforms. These are the best way of communication, their access is very simple. The problem of reachability is resolved due to access to Social Media Platforms.</p>
                    </div>
                </div>

                <!-- REGISTER -->
                <div class="w-3/6 my-auto py-5 px-7 border border-opacity-25 border-gray-500 rounded-md shadow-lg">
                    
                    <!-- REGISTER FLASH MESSAGE  -->
                    <div class="flex flex-col gap-2" id="regflash">
                        <% regErrors.forEach(msg => { %>
                            <div class="w-full tracking-wide font-medium p-2 rounded mx-auto border border-red-600 border-opacity-80 bg-red-300 text-red-900 text-sm"> - <%= msg %></div>
                        <% }) %>
                    </div>
                    <!-- REGISTER FORM -->
                    <form action="/register" method="POST">
                        <div class="flex flex-col gap-3 w-full">
                            <div class="flex flex-col">
                                <label for="username" class="text-gray-600 font-medium text-sm">Username</label>
                                <input class="input-field" type="text" name="username" placeholder="Username" autocomplete="off">
                            </div>
                            <div class="flex flex-col">
                                <label for="email" class="text-gray-600 font-medium text-sm">Email</label>
                                <input class="input-field" type="email" name="email" placeholder="you@email.com"  autocomplete="off">
                            </div>
                            <div class="flex flex-col">
                                <label for="password" class="text-gray-600 font-medium text-sm">Password</label>
                                <input class="input-field" type="password" name="password" placeholder="Your strong Password" autocomplete="off">
                            </div>
                            <button class="btn text-base py-3 font-semibold bg-green-600 hover:bg-green-500 transition ease-in text-white shadow" type="submit">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script>
            const flash = document.querySelector('#flash');
            const regFlash = document.getElementById('regflash');
            setTimeout(() => {
                if (flash) {
                    flash.classList.toggle('hidden');
                } else {
                    regFlash.classList.toggle('hidden');
                }
            }, 1000 * 5)
        </script>
<%- include('template/footer.ejs') %>