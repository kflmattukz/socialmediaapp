<%- include('template/head.ejs') %>

    <div class="w-2/4 h-full flex flex-col mt-5 mx-auto mb-auto">
        <div class="mb-3">
            <a href="/post/<%= post._id %>" class="flex gap-2 items-center text-blue-500 hover:text-blue-600">
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                </div>
                Back to post
            </a>
        </div>
        <%- include('template/flash') %> 
        
        <form action="/post/<%= post._id %>/edit" method="POST" class="flex flex-col gap-3 w-full text-gray-700">
            <div class="flex flex-col">
                <label for="title" class="mb-2 font-semibold">Title</label>
                <input type="text" name="title" id="title" value="<%= post.title %> " class="rounded-lg shadow text-lg px-3 py-2 outline-none focus:ring ring-blue-500 ring-opacity-50 border border-gray-500 border-opacity-25">
            </div>
            <div class="flex flex-col">
                <label for="content" class="mb-2 font-semibold">Content</label>
                <textarea name="content" id="content" cols="30" rows="10" class="flex-auto rounded-lg shadow text-lg px-3 py-2 outline-none focus:ring ring-blue-500 ring-opacity-50 border border-gray-500 border-opacity-25"><%= post.content %></textarea>
            </div>
            <div>
                <button type="submit" class="px-10 py-2 bg-green-500 text-white shadow rounded-lg border border-green-600 font-semibold">Save Updates</button>
            </div>
        </form>
    </div>

<%- include('template/footer.ejs') %>